{
  "manifest_version": 3,
  "name": "AnimePahe Bulk Downloader",
  "version": "1.0.5",
  "description": "Download entire anime seasons from AnimePahe !",
  "permissions": [
    "downloads",
    "tabs",
    "scripting",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": [
    "https://animepahe.si/*",
    "https://kwik.cx/*",
    "https://i.animepahe.si/*"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://animepahe.si/anime/*"
      ],
      "js": [
        "src/animepahe_home.js"
      ],
      "css": [
        "src/buttons.css"
      ]
    },
    {
      "matches": [
        "https://animepahe.si/play/*"
      ],
      "js": [
        "src/animepahe_episode.js"
      ]
    },
    {
      "matches": [
        "https://pahe.win/*"
      ],
      "js": [
        "src/pahewin.js"
      ]
    },
    {
      "matches": [
        "https://kwik.cx/*"
      ],
      "js": [
        "src/kwik.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Check downloads"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "animepahe-bulk-downloader@nounours0261",
      "strict_min_version": "109.0"
    }
  }
}
